    <servlet>
        <servlet-name>RegistrationStatus</servlet-name>
        <jsp-file>/RegistrationStatus.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Rides</servlet-name>
        <jsp-file>/Rides.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>WelcomePage</servlet-name>
        <jsp-file>/WelcomePage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/ControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/Book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogInStatus</servlet-name>
        <url-pattern>/LogInStatus</url-pattern>
    </servlet-mapping>
